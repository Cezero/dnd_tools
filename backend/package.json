{
  "name": "dnd-tools-backend",
  "version": "1.0.0",
  "description": "D&D Reference API Server",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "generate": "node scripts/generateFeatureRoutes.js",
    "watch:generate": "chokidar 'src/features/**/routes/*.js' -c 'npm run generate'",
